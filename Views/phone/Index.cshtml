@model IEnumerable<MVC_WEBApplication.Models.phone>

@{
    ViewBag.Title = "Index";
}
<br />
<h3>System Detail</h3>
<hr />
<br />


<style>
    /*alertify js theme color-profile change*/
    .alertify-notifier .ajs-message.ajs-message{
        background-color:orangered;
    }
    .btn{
        color: white;
    }
</style>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
</p>
<table class="table table-hover">
    <thead class=" table table-danger">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Model_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Launch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Camera)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ram)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Battery)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Network)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Memory)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Model_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Launch)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Camera)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ram)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Battery)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Network)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Memory)
        </td>
        <td>
            <div class="btn btn-primary">@Html.ActionLink("Edit","Edit", new  { id=item.Brand_Name})</div>
            <div class="btn btn-danger">@Html.ActionLink("Delete","Delete", new  { id=item.Brand_Name})</div>
        </td>
    </tr>
}

</table>
@section scripts{
    <script>
        // alertify js for create and edit

        $(function () {
            var SuccessMessage = '@TempData["SuccessMessage"]'
            if (SuccessMessage != '')
                alertify.success(Successmessage);
        });

        // alertify js delete

        function Delete(id) {
            alertify.confirm('Mobile System', 'Do you want to delete this record?', function () {
                window.location.href = '@Url.Action("Delete","phone")/' + id;
            }, null);
        }

    </script>
    }
